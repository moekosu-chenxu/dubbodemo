    <resultMap id="Car" type="com.moekosu.dubbo.api.bean.ShoppingCar">

    </resultMap>

    <insert id="createCar" parameterType="java.lang.String">
        INSERT INTO
          shoppingcar(userId, priceSum)
        VALUES (
          #{userId}, 0
        )
        <!-- 定义返回主键
        <selectKey keyProperty="id" resultType="java.lang.Long" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>-->
    </insert>

    <insert id="add2Car" parameterType="java.lang.String">
        INSERT INTO
          car_goods cg(car_id, goods_id, buyCount)
        VALUES (
          #{carId},
          #{goodsId},
          #{buyCount}
        )
    </insert>

    <select id="getCarDetails" parameterType="java.lang.String" resultMap="Car">
        SELECT
          car.id, car.user_id, car.price_sum
        FROM
          shoppingCar car
        LEFT JOIN car_goods cg ON car.id = cg.car_id
        LEFT JOIN goods gd ON cg.goods_id = gd.id
        <where>
          <if test="userId != null and userId != ''">
              car.user_id = #{userId}
          </if>
        </where>
    </select>

    <delete id="remove4Car" parameterType="java.lang.String">
        DELETE FROM
          car_goods cg
        WHERE
          cg.car_id = #{carId}
          <if test="goodsId != null and goodsId != ''">
              and cg.goods_id = #{goodsId}
          </if>
    </delete>

